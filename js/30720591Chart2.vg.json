{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Country Carbon Emissions based on GDP",
  "data": {
    "url": "https://raw.githubusercontent.com/beccanga/FIT3179DV2/main/data/country_profile_variables.csv"
  },
    "params": [
    {
      "name": "Population",

      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 1000000, "step": 1000}
    }
  ],
  "selection": {
    "region_selection": {
      "type": "multi", "fields": ["Region"], "bind": "legend"
    }
  },

  "mark": "point",
  "encoding": {
    "x": {
      "field": "GDP",
      "type": "quantitative",
      "title":"Country GDP",
      "axis": {"tickCount": 7},
      "scale": {"type": "log",  "domain":[1, 10000000]}
    },
    "y": {
      "field": "CO2emissionestimates",
      "type": "quantitative",
      "title": "CO2 Emission Estimates",
      "axis": { "tickCount": 6},
      "scale": {"type": "log", "domain":[1, 10000000]}
    },
    "size": {"field": "Population", "type": "quantitative",  "scale": {"range": [30, 500]}
},
    "fill": {"field": "Region",  "type": "nominal","scale": {"domain":["Carribean", "CentralAmerica", "CentralAsia", "EsternAfrica", "EasternAsia", "EasternEurope", "Melanesia",
    "Micronesia", "MiddleAfrica", "NothernAfrica","NorthernAmerica","NorthernEurope","Oceania",
    "Polynesia", "South-easternAsia", "SouthAmerica", "SouthernAfrica", "SouthernAsia", "SouththernEurope", "WesternAfrica", "WesternAsia", "WesternEurope"
    
    ], "range": [
            "#E2C2C6", "#B9929F", "#9C528B","#610F7F", "#BA2C73", "#9AD5CA", "#ACDDE7",
            "#ADB9E3", "#A379C9", "#B744B8","#D6F6DD","#DAC4F7","#F4989C","#EBD2B4", "#ACECF7",
            "#CDC7E5", "#779CAB", "#FFD9DA", "#F3DE8A", "#89023E", "#CC7178"
]}},
    "color": {"field": "Region",  "type": "nominal","scale": {"domain":["Carribean", "CentralAmerica", "CentralAsia", "EsternAfrica", "EasternAsia", "EasternEurope", "Melanesia",
    "Micronesia", "MiddleAfrica", "NothernAfrica","NorthernAmerica","NorthernEurope","Oceania",
    "Polynesia", "South-easternAsia", "SouthAmerica", "SouthernAfrica", "SouthernAsia", "SouththernEurope", "WesternAfrica", "WesternAsia", "WesternEurope"], "range": [            "#E2C2C6", "#B9929F", "#9C528B","#610F7F", "#BA2C73", "#9AD5CA", "#ACDDE7",
            "#ADB9E3", "#A379C9", "#B744B8","#D6F6DD","#DAC4F7","#F4989C","#EBD2B4", "#ACECF7",
            "#CDC7E5", "#779CAB", "#FFD9DA", "#F3DE8A", "#89023E", "#CC7178"]}
    },
    "opacity": {
      "condition": {"selection": "region_selection", "value": 0.8},
      "value": 0.2
    },
    "tooltip": [
      {"field": "country", "type": "nominal"},
      {"field": "Population", "type": "quantitative", "format": ","},
      {"field": "GDP", "type": "quantitative", "format": ","},
      {"field": "CO2emissionestimates", "type": "quantitative", "format": ","}
    ]
  }
}
